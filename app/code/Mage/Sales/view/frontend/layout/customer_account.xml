<layout version="0.1.0">
    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label">
                <name>billing_agreements</name>
                <path>sales/billing_agreement/</path>
                <label>Billing Agreements</label>
            </action>
        </reference>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="Mage_Sales">
                <name>orders</name>
                <path>sales/order/history/</path>
                <label>My Orders</label>
            </action>
        </reference>
        <reference name="left">
            <block type="Mage_Sales_Block_Reorder_Sidebar" name="sale.reorder.sidebar" as="reorder" template="reorder/sidebar.phtml"/>
        </reference>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label">
                <name>recurring_profiles</name>
                <path>sales/recurring_profile/</path>
                <label>Recurring Profiles</label>
            </action>
        </reference>
    </customer_account>
</layout>
