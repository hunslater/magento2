<layout version="0.1.0">
    <sales_recurring_profile_index translate="label" type="page" parent="customer_account_index">
        <label>Recurring Profile</label>
        <update handle="customer_account"/>
        <reference name="root">
            <action method="setTemplate">
                <template>2columns-left.phtml</template>
            </action>
        </reference>
        <reference name="my.account.wrapper">
            <block type="Mage_Sales_Block_Recurring_Profiles" name="sales.recurring.profiles" template="recurring/profiles.phtml">
                <block type="Mage_Sales_Block_Recurring_Profiles" name="sales.recurring.profiles.grid" as="grid" template="recurring/grid.phtml">
                    <action method="prepareProfilesGrid"/>
                    <action method="setEmptyGridMessage" translate="value">
                        <value>There are no recurring profiles yet.</value>
                    </action>
                    <action method="setGridHtmlId">
                        <value>recurring_profile_list_view</value>
                    </action>
                </block>
            </block>
        </reference>
    </sales_recurring_profile_index>
</layout>
