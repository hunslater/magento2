<config>
    <acl>
        <resources>
            <resource id="Mage_Adminhtml::admin">
                <resource id="Mage_Adminhtml::marketing">
                    <resource id="Mage_Adminhtml::marketing_communications">
                        <resource id="Mage_Newsletter::template" title="Newsletter Template" module="Mage_Newsletter" sortOrder="20" />
                        <resource id="Mage_Newsletter::queue" title="Newsletter Queue" module="Mage_Newsletter" sortOrder="30"/>
                        <resource id="Mage_Newsletter::subscriber" title="Newsletter Subscribers" module="Mage_Newsletter" sortOrder="40"/>
                    </resource>
                </resource>
                <resource id="Mage_Reports::report">
                    <resource id="Mage_Reports::report_marketing">
                        <resource id="Mage_Newsletter::problem" title="Newsletter Problem Reports" module="Mage_Newsletter" sortOrder="40"/>
                    </resource>
                </resource>
                <resource id="Mage_Adminhtml::stores">
                    <resource id="Mage_Adminhtml::stores_settings">
                        <resource id="Mage_Adminhtml::config">
                            <resource id="Mage_Newsletter::newsletter" module="Mage_Newsletter" title="Newsletter Section" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
