<config>
    <modules>
        <Mage_Theme>
            <version>1.6.0.0</version>
            <active>true</active>
        </Mage_Theme>
    </modules>
    <global>
        <theme>
            <css>
                <upload_limit>2M</upload_limit>
            </css>
            <js>
                <upload_limit>2M</upload_limit>
            </js>
        </theme>
        <di>
            <Mage_Theme_Model_Config>
                <parameters>
                    <configCache>
                        <instance>Mage_Core_Model_Cache_Type_Config</instance>
                    </configCache>
                    <layoutCache>
                        <instance>Mage_Core_Model_Cache_Type_Layout</instance>
                    </layoutCache>
                </parameters>
            </Mage_Theme_Model_Config>
        </di>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <use>admin</use>
                <args>
                    <modules>
                        <theme>Mage_Theme_Adminhtml</theme>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
    </adminhtml>
    <default>
        <theme>
            <customization>
                <custom_css>Mage_Theme_Model_Theme_Customization_File_CustomCss</custom_css>
            </customization>
        </theme>
    </default>
</config>
