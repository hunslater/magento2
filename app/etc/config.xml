<config>
    <global>
        <install>
            <date />
        </install>
        <resources>
            <default_setup>
                <connection>
                    <host>localhost</host>
                    <username />
                    <password />
                    <dbname>magento</dbname>
                    <model>mysql4</model>
                    <initStatements>SET NAMES utf8</initStatements>
                    <type>pdo_mysql</type>
                    <active>0</active>
                </connection>
            </default_setup>
            <default_write>
                <connection>
                    <use>default_setup</use>
                </connection>
            </default_write>
            <default_read>
                <connection>
                    <use>default_setup</use>
                </connection>
            </default_read>
            <core_setup>
                <setup>
                    <module>Mage_Core</module>
                </setup>
                <connection>
                    <use>default_setup</use>
                </connection>
            </core_setup>
            <core_write>
                <connection>
                    <use>default_write</use>
                </connection>
            </core_write>
            <core_read>
                <connection>
                    <use>default_read</use>
                </connection>
            </core_read>
        </resources>
        <resource>
            <connection>
                <types>
                    <pdo_mysql>
                        <adapter>Varien_Db_Adapter_Pdo_Mysql</adapter>
                        <class>Mage_Core_Model_Resource_Type_Db_Pdo_Mysql</class>
                        <compatibleMode>1</compatibleMode>
                    </pdo_mysql>
                </types>
            </connection>
        </resource>
        <di>
            <preferences>
                <Mage_Core_Model_Db_UpdaterInterface>Mage_Core_Model_Db_Updater</Mage_Core_Model_Db_UpdaterInterface>
                <Mage_Core_Model_AppInterface>Mage_Core_Model_App_Proxy</Mage_Core_Model_AppInterface>
                <Mage_Core_Model_Config_InvalidatorInterface>Mage_Core_Model_Config_Invalidator_Proxy</Mage_Core_Model_Config_InvalidatorInterface>
                <Mage_Core_Model_CacheInterface>Mage_Core_Model_Cache_Proxy</Mage_Core_Model_CacheInterface>
                <Mage_Core_Model_Store_ConfigInterface>Mage_Core_Model_Store_Config</Mage_Core_Model_Store_ConfigInterface>
                <Mage_Core_Model_StoreManagerInterface>Mage_Core_Model_StoreManager</Mage_Core_Model_StoreManagerInterface>
                <Mage_Core_Model_View_DesignInterface>Mage_Core_Model_View_Design</Mage_Core_Model_View_DesignInterface>
                <Mage_Core_Model_LocaleInterface>Mage_Core_Model_Locale</Mage_Core_Model_LocaleInterface>
                <Mage_Core_Model_UrlInterface>Mage_Core_Model_Url</Mage_Core_Model_UrlInterface>
                <Mage_Core_Model_Event_InvokerInterface>Mage_Core_Model_Event_Invoker_InvokerDefault</Mage_Core_Model_Event_InvokerInterface>
                <Varien_Data_Collection_Db_FetchStrategyInterface>Varien_Data_Collection_Db_FetchStrategy_Query</Varien_Data_Collection_Db_FetchStrategyInterface>
            </preferences>
            <Mage_Core_Model_App_State>
                <parameters>
                    <mode><argument>Mage::PARAM_MODE</argument></mode>
                </parameters>
            </Mage_Core_Model_App_State>
            <Mage_Core_Model_Config_Loader_Local>
                <parameters>
                    <customFile><argument>Mage::PARAM_CUSTOM_LOCAL_FILE</argument></customFile>
                    <customConfig><argument>Mage::PARAM_CUSTOM_LOCAL_CONFIG</argument></customConfig>
                </parameters>
            </Mage_Core_Model_Config_Loader_Local>
            <Mage_Core_Model_Config_Loader_Modules>
                <parameters>
                    <allowedModules><argument>Mage::PARAM_ALLOWED_MODULES</argument></allowedModules>
                </parameters>
            </Mage_Core_Model_Config_Loader_Modules>
            <Mage_Core_Model_Cache_Frontend_Factory>
                <parameters>
                    <enforcedOptions><argument>Mage::PARAM_CACHE_OPTIONS</argument></enforcedOptions>
                </parameters>
            </Mage_Core_Model_Cache_Frontend_Factory>
            <Mage_Core_Model_Cache_Types>
                <parameters>
                    <banAll><argument>Mage::PARAM_BAN_CACHE</argument></banAll>
                </parameters>
            </Mage_Core_Model_Cache_Types>
            <Mage_Core_Model_StoreManager>
                <parameters>
                    <scopeCode><argument>Mage::PARAM_RUN_CODE</argument></scopeCode>
                    <scopeType><argument>Mage::PARAM_RUN_TYPE</argument></scopeType>
                </parameters>
            </Mage_Core_Model_StoreManager>
            <Mage_Core_Model_Cache>
                <parameters>
                    <!-- @todo remove cache types proxy as soon as deprecated methods of Mage_Core_Model_Cache are removed -->
                    <cacheTypes>
                        <instance>Mage_Core_Model_Cache_Types_Proxy</instance>
                    </cacheTypes>
                    <config>
                        <instance>Mage_Core_Model_Config_Proxy</instance>
                    </config>
                </parameters>
            </Mage_Core_Model_Cache>
            <Mage_Core_Model_Config>
                <parameters>
                    <storage>
                        <instance>Mage_Core_Model_Config_Storage</instance>
                    </storage>
                </parameters>
            </Mage_Core_Model_Config>
            <Mage_Core_Model_Config_Container>
                <parameters>
                    <configCache>
                        <instance>Mage_Core_Model_Config_Cache_Proxy</instance>
                    </configCache>
                </parameters>
            </Mage_Core_Model_Config_Container>
            <Mage_Core_Model_Config_Resource>
                <parameters>
                    <config>
                        <instance>Mage_Core_Model_Config_Primary</instance>
                    </config>
                </parameters>
            </Mage_Core_Model_Config_Resource>
            <Mage_Core_Model_Config_Locales>
                <parameters>
                    <storage>
                        <instance>Mage_Core_Model_Config_Storage_Locales</instance>
                    </storage>
                </parameters>
            </Mage_Core_Model_Config_Locales>
            <Mage_Core_Model_Config_Modules>
                <parameters>
                    <storage>
                        <instance>Mage_Core_Model_Config_Storage_Modules</instance>
                    </storage>
                </parameters>
            </Mage_Core_Model_Config_Modules>
            <Mage_Core_Model_Config_Storage>
                <parameters>
                    <loader>
                        <instance>Mage_Core_Model_Config_Loader_Proxy</instance>
                    </loader>
                </parameters>
            </Mage_Core_Model_Config_Storage>
            <Mage_Core_Model_Config_Storage_Modules>
                <parameters>
                    <loader>
                        <instance>Mage_Core_Model_Config_Loader_Modules_Proxy</instance>
                    </loader>
                </parameters>
            </Mage_Core_Model_Config_Storage_Modules>
            <Mage_Core_Model_Config_Storage_Locales>
                <parameters>
                    <loader>
                        <instance>Mage_Core_Model_Config_Loader_Locales_Proxy</instance>
                    </loader>
                </parameters>
            </Mage_Core_Model_Config_Storage_Locales>
            <Mage_Core_Model_Event_Config>
                <parameters>
                    <config>
                        <instance>Mage_Core_Model_Config_Modules_Proxy</instance>
                    </config>
                </parameters>
            </Mage_Core_Model_Event_Config>
            <Mage_Core_Model_Translate>
                <parameters>
                    <cache>
                        <instance>Mage_Core_Model_Cache_Type_Translate</instance>
                    </cache>
                </parameters>
            </Mage_Core_Model_Translate>
            <Mage_Install_Model_Installer>
                <parameters>
                    <config>
                        <instance>Mage_Core_Model_Config_Proxy</instance>
                    </config>
                </parameters>
            </Mage_Install_Model_Installer>
            <Mage_Core_Model_Config_Invalidator>
                <parameters>
                    <primaryConfig>
                        <instance>Mage_Core_Model_Config_Primary</instance>
                    </primaryConfig>
                    <modulesConfig>
                        <instance>Mage_Core_Model_Config_Modules</instance>
                    </modulesConfig>
                    <localesConfig>
                        <instance>Mage_Core_Model_Config_Locales</instance>
                    </localesConfig>
                </parameters>
            </Mage_Core_Model_Config_Invalidator>
            <Mage_Core_Model_Store_StorageFactory>
                <parameters>
                    <config>
                        <instance>Mage_Core_Model_Config_Proxy</instance>
                    </config>
                </parameters>
            </Mage_Core_Model_Store_StorageFactory>
            <Magento_Filesystem>
                <parameters>
                    <adapter>
                        <instance>Magento_Filesystem_Adapter_Local</instance>
                    </adapter>
                </parameters>
                <shared>0</shared>
            </Magento_Filesystem>
            <Magento_Data_Structure>
                <shared>0</shared>
            </Magento_Data_Structure>
            <Magento_Http_Handler_Composite>
                <parameters>
                    <handlers>
                        <app>
                            <sortOrder>50</sortOrder>
                            <class>Mage_Core_Model_App_Handler</class>
                        </app>
                    </handlers>
                </parameters>
            </Magento_Http_Handler_Composite>
            <Mage_Core_Model_DataService_Path_Composite>
                <parameters>
                    <items>
                        <data>Mage_Core_Model_DataService_Repository</data>
                        <request>Mage_Core_Model_DataService_Path_Request</request>
                    </items>
                </parameters>
            </Mage_Core_Model_DataService_Path_Composite>
            <Mage_Core_Helper_Url>
                <parameters>
                    <translate>
                        <instance>Mage_Core_Model_Translate_Proxy</instance>
                    </translate>
                </parameters>
            </Mage_Core_Helper_Url>
            <Mage_Core_Model_Design>
                <parameters>
                    <eventDispatcher>
                        <instance>Mage_Core_Model_Event_Manager_Proxy</instance>
                    </eventDispatcher>
                </parameters>
            </Mage_Core_Model_Design>
            <Mage_Core_Model_View_Design>
                <parameters>
                    <storeManager>
                        <instance>Mage_Core_Model_StoreManager_Proxy</instance>
                    </storeManager>
                </parameters>
            </Mage_Core_Model_View_Design>
            <Magento_Acl>
                <shared>0</shared>
            </Magento_Acl>
            <Mage_Core_Model_Context>
                <parameters>
                    <eventDispatcher>
                        <instance>Mage_Core_Model_Event_Manager_Proxy</instance>
                    </eventDispatcher>
                </parameters>
            </Mage_Core_Model_Context>
            <Mage_Core_Model_ModuleManager>
                <parameters>
                    <config>
                        <instance>Mage_Core_Model_Config_Proxy</instance>
                    </config>
                </parameters>
            </Mage_Core_Model_ModuleManager>
        </di>
    </global>
    <default>
        <system>
            <filesystem>
                <base>{{root_dir}}</base>
                <app>{{root_dir}}/app</app>
                <code>{{app_dir}}/code</code>
                <design>{{app_dir}}/design</design>
                <locale>{{app_dir}}/locale</locale>
                <etc>{{app_dir}}/etc</etc>
                <media>{{media_dir}}</media>
                <upload>{{media_dir}}/upload</upload>
                <var>{{var_dir}}</var>
                <cache>{{var_dir}}/cache</cache>
                <session>{{var_dir}}/session</session>
                <tmp>{{var_dir}}/tmp</tmp>
                <pear>{{var_dir}}/pear</pear>
                <export>{{var_dir}}/export</export>
            </filesystem>
        </system>
        <general>
            <locale>
                <code>en_US</code>
                <timezone>America/Los_Angeles</timezone>
            </locale>
        </general>
    </default>
    <varien>
        <class>Varien</class>
    </varien>
</config>
